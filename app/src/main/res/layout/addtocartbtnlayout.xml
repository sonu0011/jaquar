<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/addtocartbtn" android:layout_height="wrap_content">
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/buyProductAddtocartIcon"
    android:layout_marginLeft="100dp"
    android:src="@drawable/ic_shopping_cart_black_24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD TO CART"
        android:textSize="18sp"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/buyProductAddtocartIcon"
        android:layout_alignTop="@+id/buyProductAddtocartIcon"
        android:layout_marginLeft="5dp"
        android:textColor="#fff"/>

</RelativeLayout>