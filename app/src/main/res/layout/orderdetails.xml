<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp"
   android:layout_marginTop="5dp"

    android:background="@drawable/orderdetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Order date"
      android:id="@+id/orderDetailsDate"
      android:fontFamily="@font/custom_font_dark"
      android:textSize="17sp"
      android:textColor="#fc000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:id="@+id/orderDetailsDateValue"
        android:layout_toRightOf="@+id/orderDetailsDate"
        android:text="26-May-2018"
        android:textSize="17sp"
        android:fontFamily="@font/custom_font"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #"
        android:layout_below="@+id/orderDetailsDate"
        android:id="@+id/orderDetailsId"
        android:fontFamily="@font/custom_font_dark"
        android:textSize="17sp"
        android:textColor="#fc000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:id="@+id/orderDetailsIdValue"
        android:layout_alignTop="@+id/orderDetailsId"
        android:layout_toRightOf="@+id/orderDetailsId"
        android:text="BC14GHTW45"
        android:textSize="17sp"
        android:fontFamily="@font/custom_font"
        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order total"

        android:layout_below="@+id/orderDetailsId"
        android:id="@+id/orderDetailstotal"
        android:fontFamily="@font/custom_font_dark"
        android:textSize="17sp"
        android:textColor="#fc000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:id="@+id/orderDetailsRsSymbol"
        android:layout_toRightOf="@+id/orderDetailstotal"
        android:layout_alignTop="@+id/orderDetailstotal"
        android:text="@string/Rs"

        android:textSize="18sp"
        android:fontFamily="@font/custom_font_dark"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="975.00"
        android:layout_marginTop="48dp"
        android:layout_toRightOf="@+id/orderDetailsRsSymbol"
        android:id="@+id/orderDetailsPriceValue"
        android:fontFamily="@font/custom_font"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:textColor="#fc000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:id="@+id/orderDetailsTotalitem"
        android:layout_toRightOf="@+id/orderDetailsPriceValue"
        android:text=" (1 item) "
        android:textSize="17sp"
        android:layout_alignTop="@+id/orderDetailsPriceValue"
        android:fontFamily="@font/custom_font"
        android:textStyle="bold"
        android:textColor="#000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vieworderdetails"
        android:text="View order details"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_navigate_next_black_24dp"
        android:fontFamily="@font/custom_font_dark"
        android:textColor="#000"
        android:layout_below="@+id/orderDetailstotal"/>
</RelativeLayout>